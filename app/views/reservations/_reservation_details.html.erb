<div class = "container">
  <div class="form-outline mb-4">
    <%= form.label :user_name, 'Name' %>
    <%= form.text_field :user_name , class:"form-control" %>
  </div>

  <div class="col-md-2 mb-4">
    <div class="form-outline datepicker">
      <%= form.label :user_age, 'Age' %>
      <%= form.number_field :user_age , class:"form-control"%>
    </div>

  </div>

  <div class="row">
    <div class="form-outline datepicker col-md-6 mb-4">
      <%= form.label :user_email, 'Email' %>
      <%= form.email_field :user_email , class:"form-control" %>
    </div>

    <div class="col-md-6 my-auto">
      <%= form.select :gender, [:male, :female, :other] %><br>
    </div>
  </div>
</div>