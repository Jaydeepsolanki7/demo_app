<div class="container">

  <%= form_with model: route do |form| %>
    <div>
      <%= form.label :route_name  %>
      <%= form.text_field :route_name, class:"form-control" %>
    </div>

    <div>
      <%= form.label :distance %>
      <%= form.number_field :distance, class:"form-control" %>
    </div>

    <div >
      <%= form.submit class:"btn btn-success" %>
    </div>
  <% end %>
</div>