<%= form_with model: [@bus, @bus.seats.build] do |form| %>
<div>
  <%= form.select :status, [:seat_available, :seat_unavailable]%>
</div>

<div>
  <%= form.label :seat_no %>
  <%= form.number_field :seat_no, in: 1..@bus.capacity %><br>
</div>

<div>
  <%= form.submit class:"btn btn-success"%>
</div>
<%end%>